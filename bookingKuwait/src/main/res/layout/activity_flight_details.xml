<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_bg"
            android:minHeight="55dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back_btn"
                android:clickable="true"
                android:onClick="clicker" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:gravity="center|left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="10dp" >

                        <TextView
                            android:id="@+id/tv_Flight_Hd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flight_details"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white"
						    android:fontFamily="sans-serif-condensed" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </LinearLayout>
                </LinearLayout>
                
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_flight_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" >

            <LinearLayout
	            android:id="@+id/ll_flight_details_lv"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
                
                <LinearLayout
                    android:id="@+id/ll_flight_head_1"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:padding="7dp" >
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:orientation="vertical" >
			
			            <LinearLayout
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:gravity="center_vertical" >
			
			                <TextView
			                    android:id="@+id/tv_from_1"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="KWI"
			                    android:textColor="@android:color/black"
			                    android:textSize="20dp"
			                    android:fontFamily="sans-serif-condensed" />
			
			                <ImageView
			                    android:layout_width="15dp"
			                    android:layout_height="15dp"
			                    android:src="@drawable/flight_blue"
			                    android:layout_margin="5dp" />
			
			                <TextView
			                    android:id="@+id/tv_to_1"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:text="DXB"
			                    android:textColor="@android:color/black"
			                    android:textSize="20dp"
			                    android:fontFamily="sans-serif-condensed" />
			
			            </LinearLayout>
			
			            <TextView
			                android:id="@+id/tv_date_1"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="@android:color/black"
			                android:text="28 Apr 2016"
			                android:fontFamily="sans-serif-condensed" />
			
			        </LinearLayout>
			
			        <LinearLayout
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:orientation="vertical"
			            android:gravity="right" >
			
			            <TextView
			                android:id="@+id/tv_total_time_1"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="9h 30min"
			                android:textColor="@android:color/black"
			                android:fontFamily="sans-serif-condensed" />
			
			            <TextView
			                android:id="@+id/tv_stops_1"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="1 Stop"
			                android:textColor="@android:color/black"
			                android:fontFamily="sans-serif-condensed" />
			
			        </LinearLayout>
			    </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_flight_details_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_flight_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/ll_flight_head_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
			        	android:background="#E0E0E0" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:id="@+id/tv_from_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KWI"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp"
                                    android:fontFamily="sans-serif-condensed" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/flight_blue" />

                                <TextView
                                    android:id="@+id/tv_to_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DXB"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp"
                                    android:fontFamily="sans-serif-condensed" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_date_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 Apr 2016"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_total_time_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9h 30min"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tv_stops_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Stop"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flight_details_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_flight_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/ll_flight_head_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="#E0E0E0" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:id="@+id/tv_from_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KWI"
                                    android:fontFamily="sans-serif-condensed"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/flight_blue" />

                                <TextView
                                    android:id="@+id/tv_to_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DXB"
                                    android:fontFamily="sans-serif-condensed"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_date_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 Apr 2016"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_total_time_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9h 30min"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tv_stops_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Stop"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flight_details_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_flight_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/ll_flight_head_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="#E0E0E0" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:id="@+id/tv_from_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KWI"
                                    android:fontFamily="sans-serif-condensed"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/flight_blue" />

                                <TextView
                                    android:id="@+id/tv_to_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DXB"
                                    android:fontFamily="sans-serif-condensed"
                                    android:textColor="@android:color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_date_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 Apr 2016"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_total_time_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9h 30min"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tv_stops_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Stop"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flight_details_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
                
        	</LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@android:color/black" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Price"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" 
            android:background="@android:color/white" />
        
        <Button
            android:id="@+id/btn_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonfocus"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/book"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="clicker"  />

    </LinearLayout>

</LinearLayout>
