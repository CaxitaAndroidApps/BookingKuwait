<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="3dp" >

            <ImageView
                android:id="@+id/iv_flight_logo"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".3"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_no_image" />

            <TextView
                android:id="@+id/tv_flight_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Small Text"
                android:layout_margin="2dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_flight_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Small Text"
                android:layout_margin="2dp"
				android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <TextView
                        android:id="@+id/tv_depart_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="KWI"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_depart_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.30 A.M"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <TextView
	                android:id="@+id/tv_depart_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:fontFamily="sans-serif-condensed"
	                android:text="Small Text"
	                android:layout_margin="2dp"
	                android:textColor="#757575" />

                <TextView
	                android:id="@+id/tv_depart_airport"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:fontFamily="sans-serif-condensed"
	                android:text="Small Text"
	                android:layout_margin="2dp"
	                android:textColor="#757575"
	                android:gravity="right" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="vertical" >
                
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/flight_blue" />
                
                <TextView
	                android:id="@+id/tv_travel_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="9h 30min"
	                android:textColor="@android:color/black"
	                android:fontFamily="sans-serif-condensed"
	                android:textSize="12sp"
	                android:layout_margin="5dp"
	                android:gravity="center" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_arrival_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="10.30 A.M"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_arrival_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="KWI"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>
                
                <TextView
	                android:id="@+id/tv_arrival_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:fontFamily="sans-serif-condensed"
	                android:text="Small Text"
	                android:layout_margin="2dp"
	                android:textColor="#757575" />
                
                <TextView
	                android:id="@+id/tv_arrival_airport"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:fontFamily="sans-serif-condensed"
	                android:text="Small Text"
	                android:layout_margin="2dp"
	                android:textColor="#757575" />
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp" >
            
            <TextView
                android:id="@+id/tv_flight_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Small Text"
                android:textSize="13dp"
                android:layout_margin="5dp"
				android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/baggage_info"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />
                
                <TextView
                    android:id="@+id/tv_baggage_info_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Adult: 20kg"
                    android:textSize="13dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_baggage_info_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Child: 20kg"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:textColor="@android:color/black" />
                
                <TextView
                    android:id="@+id/tv_baggage_info_infant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Infant: 20kg"
                    android:textSize="13dp"
                    android:visibility="gone"
                    android:textColor="@android:color/black" />
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_transit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/plane_change"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="5dp"
                android:padding="10dp"
				android:textColor="@android:color/black"
                android:background="@drawable/transparent_border_curved" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
